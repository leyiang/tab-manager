{
  "manifest_version": 3,
  "name": "Quick Tab Switcher",
  "version": "1.0",
  "description": "Press 't' to see a list of open tabs",
  "permissions": [
    "tabs",
    "background",
    "windows",
    "scripting",
    "file://*"
  ],
  "host_permissions": [
    "<all_urls>",
    "file://*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}